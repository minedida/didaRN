<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!--在RN项目中，可以用来修改ScrollView中overscroll的颜色-->
        <item name="colorPrimary">@color/blue</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!--在RN项目中，可以用来修改ScrollView中overscroll的颜色-->
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="BlackNightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/black_night</item>
    </style>

    <style name="BlackBlackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/black_black</item>
    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/pink</item>
    </style>

    <style name="BlackGrayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/black_gray</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="GrayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/gray</item>
    </style>

    <style name="YellowTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/yellow</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/white</item>
    </style>
<!--colorPrimaryDark生效，statusBarColor也生效。如果都不给的话，为黑色-->
    <style name="SplashScreenTheme" parent="SplashScreen_SplashTheme">
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <!--启动屏时，状态栏文字设置为黑色-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layer</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BootTheme" parent="AppTheme">
        <!-- set bootsplash.xml as activity background -->
        <item name="android:background">@drawable/bootsplash</item>
    </style>
</resources>
